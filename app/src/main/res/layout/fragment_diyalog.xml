<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.DiyalogFragment">

    <ImageView
        android:id="@+id/img_sad"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/angryemo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_happy"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/happyemo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_normal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/normalemo"
        app:layout_constraintEnd_toStartOf="@+id/img_sad"
        app:layout_constraintStart_toEndOf="@+id/img_happy"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>